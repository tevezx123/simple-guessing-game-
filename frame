//@Mateusz Budniak

#include <ncurses.h>
#include <unistd.h>

#define DELAY 30000

int
main (int argc, char *argv[])
{
  int x = 0, y = 0;
  int max_y = 0, max_x = 0;
  int next_x = 0, next_y = 0;
  int directionX = 1, directionY = 1;

  initscr ();
  noecho ();
  curs_set (FALSE);

  // Global var `stdscr` is created by the call to `initscr()`
  getmaxyx (stdscr, max_y, max_x);

  while (1)
    {
      clear ();
      
      
      for(int i=0, x2=0; i<=max_x; i++)
      {
          mvprintw(0, x2, "*" );
          mvprintw(max_y-1, x2, "*");
          x2++;
      }
      
      for (int  k=0, y2=0; k<=max_y; k++)
      {
          mvprintw(max_y-y2, max_x-1, "*");
          mvprintw(max_y-y2, 0, "*");
          y2++;
      }
      

      mvprintw (y, x, "o");
      refresh ();

      usleep (DELAY);

      next_x = x + directionX;
      next_y = y + directionY;

      if (next_x >= max_x || next_x < 0)
	{
	  directionX *= -1;
	}
      else
	{
	  x += directionX;
	}
      if (next_y >= max_y || next_y < 0)
	{
	  directionY *= -1;
	}
      else
	{
	  y += directionY;
	}
    }


  endwin ();
}
